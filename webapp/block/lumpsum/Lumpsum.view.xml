<mvc:View xmlns:mvc="sap.ui.core.mvc"
		  xmlns:forms="sap.ui.layout.form"
		  xmlns="sap.m"
		  xmlns:core="sap.ui.core"
		  >

	<forms:SimpleForm>

		<core:Title text="General"/>
		<Label text="Flexible Group Number"/>
		<Input value="{LumpSum/FlexibleGrpNo}" id="lsFlexibleGrp" editable="false"/>

		<Label text="Nature"/>
		<Input value="{LumpSum/Nature}" id="lsNature" editable="false"/>
		
		<Label text="Phasing Type"/>
		<Input value="{LumpSum/PhasingType}" id="lsPhasingType" editable="false"/>

		<core:Title text="Account"/>
		<Label text="Topaz Account"/>
		<Input value="{LumpSum/TopazAcc}" id="lsTopazAcc" editable="false"/>

		<Label text="Settlement Method"/>
		<Input value="{LumpSum/SettleMent}" id="lsSettlementMeth" editable="false"/>
		
		<core:Title text="Measure"/>
		<Label text="Rate"/>
		<Input value="{LumpSum/Rate}" id="lsRate" editable="false"/>

		<Label text="Unit of Measure"/>
		<Input value="{LumpSum/UnitoFMesaure}" id="lsUoM" editable="false"/>

		<Label text="Linear Rule"/>
		<Input value="{LumpSum/LinearRule}" editable="false"/>


	</forms:SimpleForm>

</mvc:View>