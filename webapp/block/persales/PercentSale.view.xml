<mvc:View xmlns:mvc="sap.ui.core.mvc"
		  xmlns:forms="sap.ui.layout.form"
		  xmlns="sap.m"
		  xmlns:core="sap.ui.core">

	<forms:SimpleForm>

		<core:Title text="General"/>
		<Label text="Flexible Group Number"/>
		<Input id="psFlexGrp" value="{PerSale/FlexibleGrpNo}" editable="false"/>

		<Label text="Nature"/>
		<Input value="{PerSale/Nature}" id="psNature" editable="false" class="sapUiSmallMarginBottom"
				type="Text"/>

		<core:Title text="Account"/>
		<Label text="Topaz Account"/>
		<Input value="{PerSale/TopazAcc}" id="psAccount" editable="false"/>

		<Label text="Settlement Method"/>
		<Input value="{PerSale/SettleMent}" id="psSettlement" editable="false"/>
		
		<core:Title text="Measure"/>
		<Label text="Rate"/>
		<Input value="{PerSale/Rate}" id="psMeasure" editable="false"/>


		<Label text="Estimated Sale"/>
		<Input value="{PerSale/EstimatedSale}" id="psEstSales" editable="false"/>


	</forms:SimpleForm>

</mvc:View>