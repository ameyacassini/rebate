<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt">
	<tnt:ToolHeader>
		<Button icon="sap-icon://menu2" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>
		<ImageContent
			src="image/ProfileImage_LargeGenTile.png"
			description="Profile image"
			press="press">
		</ImageContent>
		<FlexBox
			direction="Column"
			alignItems="Start">
			<items>
				<Text text="{i18n>welcome}" class="welcomeText" />
				<Text text="Denise Smith" class="userName" />
			</items>
		</FlexBox>
		<ToolbarSpacer />
		<FlexBox
			class="logoContent"
			direction="Column"
			alignItems="Start">
			<items>
				<Image
					src="image/Cassini-logo.png"
					densityAware="false"
					class="logo"
					width="10rem" >
					<layoutData>
						<FlexItemData growFactor="1" />
					</layoutData>
				</Image>
				<Text text="{i18n>appDescription}" wrapping="false">
					<layoutData>
						<OverflowToolbarLayoutData priority="Disappear" />
					</layoutData>
				</Text>
			</items>
		</FlexBox>
		<ToolbarSpacer />
		<Button icon="sap-icon://comment" type="Transparent">
			<layoutData>
				<OverflowToolbarLayoutData priority="NeverOverflow" />
			</layoutData>
		</Button>
		<Switch state="true" customTextOn="EN" customTextOff="DE" change="onChangeLanguage">
			<layoutData>
				<FlexItemData growFactor="1" />
			</layoutData>
		</Switch>
	</tnt:ToolHeader>
</core:FragmentDefinition>